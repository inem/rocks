# Information and debugging variables
ROCKS_VERSION = 0.5.0
GITHUB_USER = $(shell git config --get github.user 2>/dev/null)
GITLAB_USER = $(shell git config --get gitlab.user 2>/dev/null)
EMAIL = $(shell git config --get user.email 2>/dev/null)
ROCKS_SOURCE = $(shell git config --get rocks.source 2>/dev/null)

vars:
	@echo "=== Rocks System ==="
	@echo "ROCKS_VERSION: $(ROCKS_VERSION)"
	@if [ -n "$(ROCKS_SOURCE)" ]; then \
		echo "ROCKS_SOURCE: $(ROCKS_SOURCE)"; \
	else \
		echo "ROCKS_SOURCE: (not configured)"; \
	fi
	@echo ""
	@echo "=== User Information ==="
	@if [ -n "$(EMAIL)" ]; then echo "EMAIL: $(EMAIL)"; fi
	@if [ -n "$(GITHUB_USER)" ]; then echo "GITHUB_USER: $(GITHUB_USER)"; fi
	@if [ -n "$(GITLAB_USER)" ]; then echo "GITLAB_USER: $(GITLAB_USER)"; fi
	@echo ""
	@echo "=== Available Modules ==="
	@echo "Run 'make rock <module>' to add modules:"
	@echo "  make rock git     # Git workflow commands"
	@echo "  make rock docker  # Docker build/deploy commands"
	@echo "  make rock instll  # Package installation commands"
	@echo "  make rock vars    # Variable information commands"
